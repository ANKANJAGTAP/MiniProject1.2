# ==============================================
# OutFyld Environment Variables
# ==============================================
# Copy this file to .env.local and fill in your actual values
# Never commit your .env.local file to version control!

# ==============================================
# Application Settings
# ==============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
# MongoDB Database
# ==============================================
MONGODB_URI=your_mongodb_connection_string_here

# ==============================================
# Firebase Configuration
# ==============================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (for server-side)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ==============================================
# Cloudinary Configuration (Image Upload)
# ==============================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
# Required for client-side uploads (turfs, payment screenshots, QR codes)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# ==============================================
# Email Configuration (Nodemailer)
# ==============================================
# SMTP Settings - Use Gmail, SendGrid, or your preferred email service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Note: For Gmail, you need to:
# 1. Enable 2-factor authentication on your Google account
# 2. Generate an "App Password" at: https://myaccount.google.com/apppasswords
# 3. Use the generated 16-character password as EMAIL_PASSWORD

# Alternative Email Services:
# SendGrid:
#   EMAIL_HOST=smtp.sendgrid.net
#   EMAIL_PORT=587
#   EMAIL_USER=apikey
#   EMAIL_PASSWORD=your_sendgrid_api_key

# Mailgun:
#   EMAIL_HOST=smtp.mailgun.org
#   EMAIL_PORT=587
#   EMAIL_USER=your_mailgun_smtp_username
#   EMAIL_PASSWORD=your_mailgun_smtp_password

# ==============================================
# SMS Configuration (Twilio)
# ==============================================
# Get your credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Note: Twilio is a paid service. Free trial includes:
# - $15 credit
# - Test phone numbers
# - Limited to verified numbers during trial

# Alternative SMS Services (Comment out Twilio if using these):
# 
# MSG91 (Popular in India):
#   MSG91_AUTH_KEY=your_msg91_auth_key
#   MSG91_SENDER_ID=your_sender_id
#
# Fast2SMS (India):
#   FAST2SMS_API_KEY=your_fast2sms_api_key
#
# TextLocal (India):
#   TEXTLOCAL_API_KEY=your_textlocal_api_key
#   TEXTLOCAL_SENDER=your_sender_name

# ==============================================
# Admin Configuration
# ==============================================
# Admin email for receiving contact form submissions and system notifications
ADMIN_EMAIL=admin@outfyld.in

# ==============================================
# Notification Settings
# ==============================================
# Set to 'true' to enable/disable specific notification channels
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true

# ==============================================
# Development/Production Mode
# ==============================================
NODE_ENV=development
# Set to 'production' when deploying to production

# ==============================================
# Security (Optional but Recommended)
# ==============================================
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000
